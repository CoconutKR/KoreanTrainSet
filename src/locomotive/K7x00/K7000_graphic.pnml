    [x+50,    y,    31,    13,   -16,    -9]
    [x+90,    y,    21,    18,    -6,    -9]
    [x+120,   y,     8,    23,    -3,   -12]
    [x+140,   y,    21,    18,   -14,    -9]
    [x+170,   y,    31,    13,   -16,    -9]
