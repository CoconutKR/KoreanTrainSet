    [x+170,  y,    31,    15,   -16,   -11]
    [x+220,  y,    21,    17,    -6,    -8]
    [x,      y,    8,     22,    -3,   -11]
    [x+15,   y,    21,    17,   -13,    -8]
    [x+45,   y,    31,    15,   -16,   -11]
    [x+95,   y,    21,    19,    -6,   -10]
}
template tmpl_EEC_cafe(x, y) {
    [x,      y,    8,     22,    -3,   -11]
