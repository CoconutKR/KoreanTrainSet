// Template for 7x00
template tmpl_K7x00(x, y) {
    [x,     y,    8,     22,    -3,   -11]
    [x+15,  y,   22,     17,   -14,    -9]
    [x+45,  y,   32,     11,   -16,    -7]
    [x+95,  y,   22,     17,    -6,    -9]
    [x+125, y,    8,     22,    -3,   -11]
    [x+140, y,   22,     17,   -15,    -9]
    [x+175, y,   32,     11,   -17,    -7]
    [x+225, y,   22,     17,    -7,    -9]
}

// 7x00
