/**
 * Stake car (Steels)
 */

// Graphics when loads Steels
spriteset(set_STAKE_CAR_STEL_loading_1A_wagon, "./src/wagon/stake_car/cargo_STEL.png") {
	tmpl_stake_car(0, 0)
}
spriteset(set_STAKE_CAR_STEL_loading_1B_wagon, "./src/wagon/stake_car/cargo_STEL.png") {
	tmpl_stake_car(0, 30)
}
spriteset(set_STAKE_CAR_STEL_loading_2_wagon, "./src/wagon/stake_car/cargo_STEL.png") {
	tmpl_stake_car(0, 60)
}
spriteset(set_STAKE_CAR_STEL_full_wagon, "./src/wagon/stake_car/cargo_STEL.png") {
	tmpl_stake_car(0, 90)
}
spritegroup sg_STAKE_CAR_STEL_A_wagon {
	loading: [
		set_STAKE_CAR_empty_wagon,
		set_STAKE_CAR_STEL_loading_1A_wagon,
		set_STAKE_CAR_STEL_loading_2_wagon,
		set_STAKE_CAR_STEL_full_wagon
	];
	loaded: [
		set_STAKE_CAR_empty_wagon,
		set_STAKE_CAR_STEL_loading_1A_wagon,
		set_STAKE_CAR_STEL_loading_2_wagon,
		set_STAKE_CAR_STEL_full_wagon
	];
}
spritegroup sg_STAKE_CAR_STEL_B_wagon {
	loading: [
		set_STAKE_CAR_empty_wagon,
		set_STAKE_CAR_STEL_loading_1B_wagon,
		set_STAKE_CAR_STEL_loading_2_wagon,
		set_STAKE_CAR_STEL_full_wagon
	];
	loaded: [
		set_STAKE_CAR_empty_wagon,
		set_STAKE_CAR_STEL_loading_1B_wagon,
		set_STAKE_CAR_STEL_loading_2_wagon,
		set_STAKE_CAR_STEL_full_wagon
	];
}
