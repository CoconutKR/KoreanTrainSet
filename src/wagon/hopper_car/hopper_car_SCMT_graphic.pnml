/**
 * Hopper car (Scrap Metals)
 */

// Graphics when loads Scrap Metals
spriteset(set_HOPPER_CAR_SCMT_loading_A_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 0)
}
spriteset(set_HOPPER_CAR_SCMT_full_A_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 30)
}
spriteset(set_HOPPER_CAR_SCMT_loading_B_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 60)
}
spriteset(set_HOPPER_CAR_SCMT_full_B_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 90)
}
spriteset(set_HOPPER_CAR_SCMT_loading_C_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 120)
}
spriteset(set_HOPPER_CAR_SCMT_full_C_wagon, "./src/wagon/hopper_car/cargo_SCMT.png") {
    tmpl_hopper_car(0, 150)
}

spritegroup sg_HOPPER_CAR_SCMT_A_wagon {
    loading: [
        set_HOPPER_CAR_empty_A_wagon,
        set_HOPPER_CAR_SCMT_loading_A_wagon,
        set_HOPPER_CAR_SCMT_full_A_wagon
    ];
    loaded: [
        set_HOPPER_CAR_empty_A_wagon,
        set_HOPPER_CAR_SCMT_loading_A_wagon,
        set_HOPPER_CAR_SCMT_full_A_wagon
    ];
}
spritegroup sg_HOPPER_CAR_SCMT_B_wagon {
    loading: [
        set_HOPPER_CAR_empty_B_wagon,
        set_HOPPER_CAR_SCMT_loading_B_wagon,
        set_HOPPER_CAR_SCMT_full_B_wagon
    ];
    loaded: [
        set_HOPPER_CAR_empty_B_wagon,
        set_HOPPER_CAR_SCMT_loading_B_wagon,
        set_HOPPER_CAR_SCMT_full_B_wagon
    ];
}
spritegroup sg_HOPPER_CAR_SCMT_C_wagon {
    loading: [
        set_HOPPER_CAR_empty_C_wagon,
        set_HOPPER_CAR_SCMT_loading_C_wagon,
        set_HOPPER_CAR_SCMT_full_C_wagon
    ];
    loaded: [
        set_HOPPER_CAR_empty_C_wagon,
        set_HOPPER_CAR_SCMT_loading_C_wagon,
        set_HOPPER_CAR_SCMT_full_C_wagon
    ];
}
