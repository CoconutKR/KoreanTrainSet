    [x+15,   y,    21,    17,   -14,    -8]
    [x+45,   y,    31,    15,   -16,   -11]
    [x+95,   y,    21,    19,    -6,   -10]
    [x+125,  y,    8,     22,    -3,   -11]
    [x+140,  y,    21,    19,   -14,   -10]
    [x+170,  y,    31,    15,   -16,   -11]
    [x+220,  y,    21,    17,    -6,    -8]
}
template tmpl_EEC_panto_wagon_r(x, y) {
