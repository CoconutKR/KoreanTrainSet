/**
 * SEOHAE
 */
SPEED_METRO(SEOHAE)
COST(SEOHAE)
RUNNING(SEOHAE)
CAPACITY(SEOHAE)
CAPACITY_PURCHASE(SEOHAE)
LOADING(SEOHAE)

// Graphics
#include "seohae_graphic.pnml"

// Switch
#include "seohae_switch.pnml"

// Item
item(FEAT_TRAINS, ko_train_SEOHAE, 5736) {
    property {
        // Common properties
        name:                           string(STR_SEOHAE_NAME);
        climates_available:             ALL_CLIMATES;
        introduction_date:              var_SEOHAE_INTRODUCTION;
        track_type:                     ELRL;
        engine_class:                   ENGINE_CLASS_ELECTRIC;
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        dual_headed:                    1;
        variant_group:                  ko_train_METROPOLITAN;

        // Spec
        power:                          POWER_IN_KW(var_SEOHAE_POWER);
        weight:                         var_SEOHAE_WEIGHT;
        tractive_effort_coefficient:    0.25;
        air_drag_coefficient:           0.01;

        // Model
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        retire_early:                   0;
        reliability_decay:              0;

        // Cargo
        cargo_capacity:                 1;
        refittable_cargo_classes:       NO_CARGO_CLASS;
        non_refittable_cargo_classes:   NO_CARGO_CLASS;
        cargo_allow_refit:              [PASS];
        cargo_disallow_refit:           [];

        // Costs
        refit_cost:                     0;
        running_cost_base:              RUNNING_COST_ELECTRIC;

        // Flags
        ai_special_flag:                AI_FLAG_PASSENGER;
        misc_flags:                     bitmask(TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT);
        bitmask_vehicle_info:           0;
    }
    graphics {
        default:                        sw_SEOHAE_engine;
        purchase:                       sw_SEOHAE_purchase;

        speed:                          sw_SEOHAE_speed;
        cost_factor:                    sw_SEOHAE_cost;
        running_cost_factor:            sw_SEOHAE_runningcost;
        cargo_capacity:                 sw_SEOHAE_capacity;
        purchase_cargo_capacity:        sw_SEOHAE_purchase_capacity;
        loading_speed:                  sw_SEOHAE_loadingspeed;

        can_attach_wagon:               sw_METRO_attach_global;
        start_stop:                     sw_ko_train_start_stop_global;
        cargo_subtype_text:             sw_SEOHAE_cargo_subtype_text;
        additional_text:                string(STR_REFIT_ADDITIONAL_ABLE);
    }
    livery_override(ko_train_PASSWG) {
        default:                        sw_SEOHAE_wagon;
        cargo_capacity:                 sw_METRO_wagon_capacity;
        running_cost_factor:            sw_PASSENGER_WAGON_runningcost;
        loading_speed:                  sw_SEOHAE_loadingspeed;
        cargo_subtype_text:             sw_SEOHAE_cargo_subtype_text;
    }
    livery_override(ko_train_PASSWGP) {
        default:                        sw_SEOHAE_wagon;
        cargo_capacity:                 sw_METRO_wagon_capacity;
        running_cost_factor:            sw_PASSENGER_WAGON_P_runningcost;
        loading_speed:                  sw_SEOHAE_loadingspeed;
        cargo_subtype_text:             sw_SEOHAE_cargo_subtype_text;
        power:                          POWER_IN_KW(var_METRO_wagon_POWER);
    }
}
// End of "SEOHAE"
