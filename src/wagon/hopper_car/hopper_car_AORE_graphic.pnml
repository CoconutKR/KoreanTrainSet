		set_HOPPER_CAR_empty_B_wagon,
		set_HOPPER_CAR_AORE_loading_B_wagon,
		set_HOPPER_CAR_AORE_full_B_wagon
	];
}
spritegroup sg_HOPPER_CAR_AORE_C_wagon {
	loading: [
		set_HOPPER_CAR_empty_C_wagon,
		set_HOPPER_CAR_AORE_loading_C_wagon,
