/**
 * Tongil passenger car
 */
// SPEED_GENERAL(TONGIL_CAR)
COST(TONGIL_CAR)
RUNNING(TONGIL_CAR)
CAPACITY(TONGIL_CAR)
// CAPACITY_PURCHASE(TONGIL_CAR)
LOADING(TONGIL_CAR)

// Graphics
#include "tongil_car_graphic.pnml"

// Switch
#include "tongil_car_switch.pnml"

// Item
item(FEAT_TRAINS, ko_train_TONGIL_CAR, 5604) {
    property {
        // Common properties
        name:                           string(STR_TONGIL_CAR_NAME);
        climates_available:             ALL_CLIMATES;
        introduction_date:              var_TONGIL_CAR_INTRODUCTION;
        track_type:                     RAIL;
        sprite_id:                      SPRITE_ID_NEW_TRAIN;

        // Spec
        power:                          0 kW;
        weight:                         var_TONGIL_CAR_WEIGHT;

        // Model
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        retire_early:                   0;
        reliability_decay:              0;

        // Cargo
        cargo_capacity:                 1;
        refittable_cargo_classes:       NO_CARGO_CLASS;
        non_refittable_cargo_classes:   NO_CARGO_CLASS;
        cargo_allow_refit:              [PASS];
        cargo_disallow_refit:           [];
        loading_speed:                  5;

        // Costs
        cost_factor:                    10;
        refit_cost:                     0;
        running_cost_base:              RUNNING_COST_DIESEL;

        // Flags
        ai_special_flag:                AI_FLAG_PASSENGER;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT, TRAIN_FLAG_FLIP);
        bitmask_vehicle_info:           0;
    }
    graphics {
        default:                        sw_TONGIL_CAR_wagon;
        purchase:                       sw_TONGIL_CAR_purchase;

        cost_factor:                    sw_TONGIL_CAR_cost;
        running_cost_factor:            sw_TONGIL_CAR_runningcost;
        cargo_capacity:                 sw_TONGIL_CAR_capacity;
        loading_speed:                  sw_TONGIL_CAR_loadingspeed;

        cargo_subtype_text:             sw_TONGIL_CAR_cargo_subtype_text;
        additional_text:                string(STR_REFIT_ADDITIONAL_ABLE);
    }
}
