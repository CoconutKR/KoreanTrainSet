/**
 * Hopper car (Aluminium ore)
 */

// Graphics when loads Aluminium ore
spriteset(set_HOPPER_CAR_AORE_loading_A_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 0)
}
spriteset(set_HOPPER_CAR_AORE_full_A_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 30)
}
spriteset(set_HOPPER_CAR_AORE_loading_B_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 60)
}
spriteset(set_HOPPER_CAR_AORE_full_B_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 90)
}
spriteset(set_HOPPER_CAR_AORE_loading_C_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 120)
}
spriteset(set_HOPPER_CAR_AORE_full_C_wagon, "./src/wagon/hopper_car/cargo_AORE.png") {
	tmpl_hopper_car(0, 150)
}

spritegroup sg_HOPPER_CAR_AORE_A_wagon {
	loading: [
		set_HOPPER_CAR_empty_A_wagon,
		set_HOPPER_CAR_AORE_loading_A_wagon,
		set_HOPPER_CAR_AORE_full_A_wagon
	];
	loaded: [
		set_HOPPER_CAR_empty_A_wagon,
		set_HOPPER_CAR_AORE_loading_A_wagon,
		set_HOPPER_CAR_AORE_full_A_wagon
	];
}
